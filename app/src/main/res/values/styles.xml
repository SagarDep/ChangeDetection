<resources>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark_light</item>
        <item name="colorAccent">@color/md_indigo_A200</item>

        <item name="mainCardColor">@color/md_grey_50</item>
        <item name="weakColor">#67687c</item>
        <item name="weakerColor">@color/md_grey_500</item>
        <item name="cardSeparatorColor">@color/md_grey_200</item>
        <item name="lottieDivider">@color/md_grey_300</item>

        <item name="toolbarColor">@color/white</item>
        <item name="iconColor">@color/icon_dark</item>
        <item name="strongColor">@color/FontStrong</item>
        <item name="standardCardColor">@color/md_grey_100</item>

        <item name="itemDeselected">@color/item_deselected_light</item>

        <item name="windowBackground">@color/window_background_light</item>
        <item name="settingsBackground">@color/white</item>
        <item name="android:windowBackground">?windowBackground</item>

        <item name="diff_text_color">@color/FontLessStrong</item>
        <item name="code_addition">@color/code_addition_light</item>
        <item name="code_addition_diff">@color/code_addition_diff_light</item>
        <item name="code_deletion">@color/code_deletion_light</item>
        <item name="code_deletion_diff">@color/code_deletion_diff_light</item>
        <item name="num_addition">@color/num_addition_light</item>
        <item name="num_deletion">@color/num_deletion_light</item>

        <item name="inputTheme">@style/DialogLight</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_dark</item>
        <item name="colorAccent">@color/md_indigo_A200</item>

        <item name="mainCardColor">@color/primary_dark</item>
        <item name="cardSeparatorColor">#161F2B</item>
        <item name="lottieDivider">?windowBackground</item>

        <item name="android:textColorSecondary">@color/white</item>

        <item name="toolbarColor">@color/primary_dark</item>
        <item name="iconColor">@color/white</item>
        <item name="strongColor">@color/white</item>
        <item name="weakColor">#CCFFFAFA</item> <!-- 80% white -->
        <item name="weakerColor">#88FFFAFA</item>
        <item name="standardCardColor">@color/primary_dark</item>

        <item name="itemDeselected">@color/item_deselected_light</item>

        <item name="windowBackground">@color/window_background_dark</item>
        <item name="settingsBackground">?windowBackground</item>
        <item name="md_background_color">?windowBackground</item>
        <item name="android:windowBackground">?windowBackground</item>
        <item name="android:navigationBarColor">@color/window_background_dark</item>

        <item name="diff_text_color">?weakColor</item>
        <item name="code_addition">@color/code_addition_dark</item>
        <item name="code_addition_diff">@color/code_addition_diff_dark</item>
        <item name="code_deletion">@color/code_deletion_dark</item>
        <item name="code_deletion_diff">@color/code_deletion_diff_dark</item>
        <item name="num_addition">@color/num_addition_dark</item>
        <item name="num_deletion">@color/num_deletion_dark</item>

        <item name="inputTheme">@style/DialogDark</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/window_background_dark</item>
    </style>

    <!--https://gist.github.com/ArthurNagy/1c4a64e6c8a7ddfca58638a9453e4aed-->
    <style name="BottomSheetDialogThemeDark" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorAccent">@color/md_blue_A400</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?settingsBackground</item>

        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>

    </style>

    <style name="BottomSheetDialogThemeLight" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/md_blue_A400</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?settingsBackground</item>

        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="AboutLight" parent="Theme.Mal.Light">
        <item name="mal_card_background">?mainCardColor</item>
        <item name="android:windowBackground">?windowBackground</item>

        <item name="mal_color_primary">?strongColor</item>
        <item name="mal_color_secondary">?weakColor</item>
    </style>

    <style name="AboutDark" parent="Theme.Mal.Dark">
        <item name="mal_card_background">?mainCardColor</item>
        <item name="android:windowBackground">?windowBackground</item>

        <item name="mal_color_primary">?strongColor</item>
        <item name="mal_color_secondary">?weakColor</item>
    </style>

    <style name="ItemTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/work_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?strongColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogLight" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/really_blue</item>
    </style>

    <style name="DialogDark" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/md_blue_A200</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="ControlBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

</resources>
